    <!-- ICONSETS -->
    <include name="DEFAULT">./_assets/iconsets/default.xml</include>

    <!-- VIDEO THEME CINEMATIC GAMELIST -->
    <subset name="video_system_cinematic" displayName="SYSTEM: VIDEO THEMES">
        <include name="Ativo" />
        <include name="Desativado" />
    </subset>

    <!-- VIDEO GAMELIST -->
    <subset name="video_gamelist" displayName="GAMELIST: GAMEPLAY">
        <include name="Ativo" />
        <include name="Desativado" />
    </subset>

    <!-- VIDEO THEME CINEMATIC GAMELIST -->
    <subset name="video_cinematic" displayName="GAMELIST: VIDEO THEMES">
        <include name="Ativo" />
        <include name="Desativado" />
    </subset>

